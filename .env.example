APP_ENV=production
FLASK_DEBUG=0
TESTING=0
SECRET_KEY=replace-with-64-char-secret
DATABASE_PATH=feedback.db
FIRM_NAME=Law Firm Insights Demo
SUPPORT_EMAIL=support@yourdomain.com
APP_BASE_URL=https://app.yourdomain.com

ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace-admin-password

SESSION_COOKIE_SECURE=1
REMEMBER_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=12
ENABLE_HSTS=1
ENABLE_CSP=1

MAX_CONTENT_LENGTH=10485760
MAX_CSV_ROWS=5000
MAX_REVIEW_TEXT_LENGTH=5000

STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID_ONETIME=price_xxx
STRIPE_PRICE_ID_MONTHLY=price_xxx
STRIPE_PRICE_ID_ANNUAL=price_xxx

MAIL_ENABLED=1
MAIL_PROVIDER=sendgrid
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USE_SSL=0
MAIL_USERNAME=apikey
MAIL_PASSWORD=sendgrid_api_key
MAIL_DEFAULT_SENDER=Law Firm Insights <no-reply@yourdomain.com>
MAIL_MAX_RETRIES=3

LOG_LEVEL=INFO
LOG_DIR=logs
SENTRY_DSN=https://xxx.ingest.sentry.io/yyy
SENTRY_TRACES_SAMPLE_RATE=0.1

CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=120

FREE_TRIAL_LIMIT=3
ONETIME_REPORT_PRICE=49
MONTHLY_SUBSCRIPTION_PRICE=129
ANNUAL_SUBSCRIPTION_PRICE=1290

# Backup/restore
BACKUP_DIR=backups
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Gunicorn
PORT=10000
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_LOG_LEVEL=info
